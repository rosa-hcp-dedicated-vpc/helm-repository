# Source: aws-privateca-issuer/charts/helper-installplan-approver/templates/job.installplan-approver.yaml
apiVersion: batch/v1
kind: Job
metadata:
  name: installplan-approver
  namespace: cert-manager-operator
  annotations:
    helm.sh/hook: pre-install
    helm.sh/hook-weight: "1"
spec:
  activeDeadlineSeconds: 240
  template:
    spec:
      containers:
        - image: registry.redhat.io/openshift4/ose-cli:latest
          command:
            - /bin/bash
            - -c
            - |
              SUBS="$NAMESPACE"

              echo sleeping for $SLEEP
              sleep $SLEEP

              for i in $SUBS
                do

                  count=0
                  while true
                  do
                    sleep $SLEEP
                    COUNTIP=$(oc get sub -n $i -o jsonpath='{.items[0].status.installplan.name}' | awk -F- '{print $1}')
                    if [ $COUNTIP == "install" ]
                       then
                         echo "Install plan is ready"
                         break
                    fi

                    ((count++))
                    if [ "$count" == '10' ]
                      then
                        echo ""
                        echo "Exiting as installplan is not ready."
                        exit 1
                      fi
                    echo "Wating for installplan to be created: $count"
                    sleep $SLEEP

                  done

                  IP=$(oc get sub -n $i -o jsonpath='{.items[0].status.installplan.name}')

                  MANUAL=$(oc get installplan $IP  -n $i -o jsonpath='{.spec.approval}')
                  APPROVED=$(oc get installplan $IP  -n $i -o jsonpath='{.spec.approved}')
                  if [ $MANUAL == "Manual" ] && [ $APPROVED == "false" ]
                    then
                      echo "Install plan $IP is ready to be patched which will install the operator $NAMESPACE"
                      oc patch installplan $IP -n $i --type='merge' -p '{"spec": {"approved": true}}'

                  fi
              done

          imagePullPolicy: Always
          name: installplan-approver
          env:
            - name: SLEEP
              value: "20"
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
      dnsPolicy: ClusterFirst
      restartPolicy: OnFailure
      serviceAccount: installplan-approver-job
      serviceAccountName: installplan-approver-job
      terminationGracePeriodSeconds: 30
---
# Source: aws-privateca-issuer/templates/operator-install-job-pre-hook.yaml
apiVersion: batch/v1
kind: Job
metadata:
  annotations:
    helm.sh/hook: pre-install
    helm.sh/hook-delete-policy: hook-succeeded
    helm.sh/hook-weight: "2"
  name: operator-install-job-hook-aws-pca
  namespace: cert-manager
spec:
  template:
    spec:
      dnsPolicy: ClusterFirst
      restartPolicy: OnFailure
      serviceAccount: operator-install-job-hook-aws-pca
      serviceAccountName: operator-install-job-hook-aws-pca
      terminationGracePeriodSeconds: 30
      containers:
        - name: operator-install-job-hook-aws-pca
          # image: "808082629126.dkr.ecr.ap-southeast-4.amazonaws.com/platform_image"
          image: "registry.access.redhat.com/ubi9/ubi:latest"
          imagePullPolicy: IfNotPresent
          env:
          - name: SLEEP
            value: "5"
          command:
            - /bin/bash
            - -c
            - |
              # openshift-cert-manager
              echo "checking on cert manager pods"
              PODS=0
              while [ "$PODS" -ne 3 ]; do
              PODS=$(oc get pods -n cert-manager|grep -i cert-manager|grep -i 1/1|wc -l|sed 's/ //g')
              echo "Waiting for pods to come up for cert manager. PODS = $PODS"
              sleep 5
              done
---
